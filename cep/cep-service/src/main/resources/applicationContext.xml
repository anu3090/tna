<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>conf/service.properties</value>
            </list>
        </property>
    </bean>

	<bean id="cepEngineRunner" class="com.cloudine.bigdata.cep.service.engine.CEPEngineRunner">
        <property name="cepEngineID" value="${service.id}"/>
	</bean>

    <bean id="csvOutputAdapterManager" class="com.cloudine.bigdata.cep.service.adapter.output.csv.CSVOutputAdapterManager">
         <property name="cepEngineID" value="${service.id}"/>
         <property name="statementName" value="${statement.name}"/>
    </bean>

</beans>
